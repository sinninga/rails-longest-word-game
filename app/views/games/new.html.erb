<h1>New Game</h1>
<div class="letters">
  <ul>
    <% @letters.each do |letter| %>
    <li><%= letter %></li>
    <% end %>
  </ul>
</div>
<h2>What is the longest word you can find?</h2>
<form class="form" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="longest_word" placeholder="Longest word">
  <input type="submit" class="btn-danger" value="PLAY!">
  <%= hidden_field_tag :letters, @letters %>
</form>
